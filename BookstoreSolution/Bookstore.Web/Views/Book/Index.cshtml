@model IEnumerable<Bookstore.Web.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Available Books</h2>

@if (Model == null || !Model.Any())
{
    <p>No books found.</p>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="text-muted">By @book.Author</p>
                        <p>ISBN: <strong>@book.ISBN</strong></p>
                        <p class="fw-bold text-success">₹@book.Price</p>
                        <a href="/Cart/Add?userId=1&bookId=@book.BookId" class="btn btn-sm btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
