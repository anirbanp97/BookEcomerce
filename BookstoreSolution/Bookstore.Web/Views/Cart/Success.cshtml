@{
    ViewData["Title"] = "Order Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5">
        <h1 class="text-success mb-3">
            <i class="bi bi-check-circle-fill"></i> Order Placed Successfully!
        </h1>

        <p class="lead mb-4">
            🎉 Thank you for your purchase!
            Your order has been placed successfully.
        </p>

        <div class="mb-4">
            <img src="~/images/order_success.png" alt="Success" style="max-width: 180px;" />
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a href="/Book" class="btn btn-primary btn-lg">
                <i class="bi bi-book"></i> Continue Shopping
            </a>

            <a href="/Order/MyOrders" class="btn btn-outline-success btn-lg">
                <i class="bi bi-box-seam"></i> View My Orders
            </a>
        </div>
    </div>
</div>
