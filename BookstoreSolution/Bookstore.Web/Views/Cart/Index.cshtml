@model Bookstore.Web.ViewModels.CartViewModel

@{
    ViewData["Title"] = "My Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">🛒 Your Shopping Cart</h2>

@if (Model == null || !Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Quantity</td>
                    <td>₹@item.UnitPrice</td>
                    <td>₹@item.LineTotal</td>
                    <td>
                        <a href="/Cart/Remove?userId=@Model.UserId&bookId=@item.BookId" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-end">Total: ₹@Model.TotalAmount</h4>

    <div class="text-end mt-3">
        <a href="/Order/PlaceOrder?userId=@Model.UserId" class="btn btn-success">Place Order</a>
    </div>
}

